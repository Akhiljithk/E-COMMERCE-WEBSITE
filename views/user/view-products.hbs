    <section>
        <div class="container mt-5">
            <div class="row">

            {{#each products}}
                <div class="col-3 m-2">
                    <div class="card m-auto" style="width: 18rem; height: 25rem;">
                        <img class="m-auto" src="/product-images/{{this._id}}.jpg" style="height: auto; width: 200px;" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <p>{{this.Price}}</p>
                            {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                        </div>
                    </div>
                </div>
            {{/each}}
            
            </div>            
        </div>
    </section>